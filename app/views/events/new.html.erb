<%= form_for @event, html: {class: "nifty_form"} do |f| %>



  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :genre %><br>
  <%= f.text_field :genre %><br>

  <%= f.label :artist %><br>
  <%= f.text_field :artist %><br>

  <%= f.label :description %><br>
  <%= f.text_field :description %><br>

  <%= f.label :url %><br>
  <%= f.text_field :url %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :date %><br>
  <%= f.text_field :date %><br>

  <%= f.label :time %><br>
  <%= f.text_field :time %><br>

  <%= f.submit "create" %>

<% end %>